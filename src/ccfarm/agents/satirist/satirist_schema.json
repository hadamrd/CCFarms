{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "description",
        "body"
    ],
    "properties": {
        "title": {
            "type": "string",
            "description": "Catchy title for the comedy segment"
        },
        "description": {
            "type": "string",
            "description": "Brief summary/description of the comedy segment"
        },
        "body": {
            "type": "string",
            "description": "Full markdown-formatted comedy script content"
        }
    }
}